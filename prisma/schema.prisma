generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model with role-based access control
model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password      String
  role          String    @default("CUSTOMER")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  cart          Cart?
  orders        Order[]

  @@index([email])
  @@map("users")
}

// Product model with optimistic locking support
model Product {
  id              Int       @id @default(autoincrement())
  name            String
  description     String?
  price           Float
  category        String
  stockQuantity   Int       @default(0)
  version         Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  cartItems       CartItem[]
  orderItems      OrderItem[]

  @@index([category])
  @@index([name])
  @@map("products")
}

// Cart model - one per user
model Cart {
  id              Int       @id @default(autoincrement())
  userId          Int       @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  items           CartItem[]

  @@index([userId])
  @@map("carts")
}

// Cart Item model - products in cart
model CartItem {
  id              Int       @id @default(autoincrement())
  cartId          Int
  productId       Int
  quantity        Int
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  cart            Cart      @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product         Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([cartId, productId])
  @@index([productId])
  @@map("cart_items")
}

// Order model
model Order {
  id              Int       @id @default(autoincrement())
  userId          Int
  totalPrice      Float
  status          String      @default("PENDING")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  items           OrderItem[]

  @@index([userId])
  @@index([status])
  @@map("orders")
}

// Order Item model - products in order with price snapshot
model OrderItem {
  id              Int       @id @default(autoincrement())
  orderId         Int
  productId       Int
  quantity        Int
  priceAtPurchase Float
  createdAt       DateTime  @default(now())

  // Relations
  order           Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product         Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

